
@model QuanLyTuyenDung.Models.ViewModels.QuanLyUngTuyenViewModel
@{
    ViewData["Title"] = "Quản lý ứng tuyển";
    int stt = 1;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    .btn-custom {
        background-color: #ff7f50; /* Màu cam đậm */
        color: #fff; /* Màu chữ trắng */
        border-color: #ff7f50; /* Màu viền */
    }

        .btn-custom:hover {
            background-color: #e65c00; /* Màu cam sáng khi hover */
            border-color: #e65c00; /* Màu viền khi hover */
            color: #fff; /* Màu chữ trắng khi hover */
        }

    .bold{
        font-weight: bold;
    }
</style>

<main class="py-4">
    <section class="job-list">
        <div class="container">
            <h1 class="text-center mb-5">Quản lý đơn ứng tuyển cho từng việc làm</h1>
            <span class="bold">Tuyển dụng: </span><span>@Model.TieuDe</span>
            <p class="bold">Mô tả:</p>
            <p class="ms-4">@Html.Raw(Model.MoTa.Replace("\r\n", "<br/>"))</p>
            <span class="bold">Mức lương: </span><span>@Model.MucLuong</span>

            <div class="create-job text-center mb-4 mt-4">
                <h3 class="bold">Danh sách ứng tuyển</h3>
            </div>

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>STT</th>
                        <th>Họ tên </th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Ngày sinh</th>
                        <th>Mô tả ứng viên</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ungtuyen in Model.UngTuyenViews)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@ungtuyen.HoTen</td>
                            <td>@ungtuyen.Email</td>
                            <td>@ungtuyen.SDT</td>
                            <td>@ungtuyen.NgaySinh.Value.ToString("dd/MM/yyyy")</td>
                            <td>@Html.Raw(ungtuyen.MoTa.Replace("\r\n", "<br/>"))</td>
                            <td>
                                <a href="@Url.Action("ThongBao", "TuyenDung",
                                    new { id_nd = ungtuyen.MaND })"
                                   class="btn btn-custom m2-2">Gửi thông báo</a>
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>


